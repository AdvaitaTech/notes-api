{
  "name": "notes-api",
  "version": "1.0.0",
  "description": "An api for maintaining personal notes",
  "main": "build/server.js",
  "author": "Vikram Thyagarajan <vikramthyagarajan92@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "db:setup": "createdb notes_dev; NODE_ENV=development ts-node src/config/migrate.ts",
    "test:setup": "createdb notes_test; NODE_ENV=test ts-node src/config/migrate.ts",
    "test": "NODE_ENV=test dotenv-flow -- ts-node src/testSetup.ts; NODE_ENV=test dotenv-flow -- jest",
    "build": "tsc",
    "start": "NODE_ENV=development dotenv-flow nodemon"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/server.ts",
    "ext": "ts, js"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "dotenv-flow": "^4.1.0",
    "drizzle-orm": "^0.29.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "redis": "^4.6.12",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.6",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.2",
    "dotenv-flow-cli": "^1.1.1",
    "drizzle-kit": "^0.20.13",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
